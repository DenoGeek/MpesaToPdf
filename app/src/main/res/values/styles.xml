<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="myActionBar">
        <attr name="icone" format="reference"/>
        <attr name="actiontitle" format="string" />
        <attr name="actionsubtitle" format="string" />

    </declare-styleable>

    <style name="AppThemeNoBar" parent="android:style/Theme.Holo.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
